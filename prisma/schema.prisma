datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  role          Role     
  requestLimit  Int      @default(10)
  requestsMade  Int      @default(0)
  lastRequestAt DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}